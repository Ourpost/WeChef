<li data-controller="display">
  <div  class="bg-white border-2 border-black"> 

    <div>訂單編號：<%= order.id %></div>
    <ul>
      <% order.items.each do |item| %>
        <li>
          <%= menu_id_to_name(item["menu_id"]) %>：<%= item["quantity"] %>份
        </li>
      <% end %>
    </ul>
    <%= link_to "已出餐", order_path(order), method: "delete", data: {action: "click->display#hide"}, class: "bg-purple-200" %>
  </div>
</li>




