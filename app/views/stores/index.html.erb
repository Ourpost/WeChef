<div class="max-h-screen box-boreder">
  <div class="flex min-h-screen overflow-x-hidden">
    <div class="w-1/5 bg-gray-100 ">
      <nav>
        <h2 class="w-full mb-2 text-xl font-semibold tracking-wide text-center text-gray-700 uppercase">
          <%= current_user.nickname %> 先生 / 小姐
        </h2>
        <h2 class="font-semibold mb-4 tracking-wide text-center text-gray-600 uppercase text-md">店家管理</h2>
          <div class="mb-1">
            <%= link_to '新增商店' , new_store_path ,class:"flex items-center px-2 py-1 font-medium text-gray-700 rounded-lg
              text-md hover:bg-gray-300"%>
          </div>
        <div class="mb-1">
          <h2 class="font-semibold mb-4 tracking-wide text-center text-gray-600 uppercase">會員管理</h2>
          <div class="mb-1">
            <%= link_to "修改使用者資料" , edit_user_registration_path , class:"flex items-center px-2 py-1 font-medium
              text-gray-700 rounded-lg text-md hover:bg-gray-300"%>
          </div>
          <div class="mb-1">
            <%= link_to "使用者登出" , destroy_user_session_path , method: 'DELETE' , data:{confirm: "Are you sure? "
              },class:"flex text-red-600 items-center px-2 py-1 font-medium text-gray-600 rounded-lg text-md hover:bg-gray-300" %>
          </div>
        </div>
      </nav>
    </div>
    <main class="items-center w-full text-sm bg-gray-200 xl:text-lg">
      <table class=" min-w-full border-collpse table">
        <thead>
          <tr class="bg-gray-200 text-gray-600 uppercase text-base  leading-normal">
            <th class="py-3 px-6 text-center">商店名稱</th>
            <th class="py-3 px-6 text-center">商店地址</th>
            <th class="py-3 px-6 text-center">商店電話</th>
            <th class="py-3 px-6 text-center">商店設定</th>
          </tr>
        </thead>
        <tbody class="block sm:table-row-group">
          <% @stores.each do |store| %>
            <tr class="content-around bg-gray-300 text-gray-600 text-sm border border-grey-600 sborder-none table-row">
              <td class="py-3 px-6 text-center borde bg-maingray">
                <div class="flex items-center text-base text-gray-50 font-bold justify-center">
                  <img class="w-6 h-6 mr-2 rounded-full" src="https://randomuser.me/api/portraits/men/1.jpg" />
                  <span>
                    <%= link_to store.name, store_path(store.id) %>
                  </span>
                </div>
              </td>
              <td class="p-2 border border-grey-500 ">
                <p class="text-center">
                  <%= store.address %>
                </p>
              </td>
              <td class="p-2 borde ">
                <p class="text-center">
                  <%= store.tel %>
                </p>
              </td>
              <td class="py-3 px-6 text-center border">
                <div class="flex item-center justify-center">
                  <button class="w-4 mr-2 transform hover:scale-110">
                    <a href="<%= edit_store_path(id: store.id) %>">
                      <img src="/photo/8675035_ic_fluent_edit_regular_icon.png" alt="" >
                    </a>
                  </button>
                  <button class="w-4 mr-2 transform hover:scale-110">
                    <%= link_to store_path(id: store.id), method: "delete" , data: {confirm: "確定刪除？" } do %>
                      <img src="/photo/4781812_bin_delete_file_garbage_recycle_icon.png" alt="" >
                    <% end %>
                  </button>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </main>
  </div>
</div>