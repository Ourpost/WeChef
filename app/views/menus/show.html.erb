<h1 class="py-10 mt-12 font-mono text-5xl font-bold text-center"><%= @menu.name %></h1>
<section class="max-w-4xl mx-auto bg-gray-100 rounded-md shadow-md dark:bg-gray-800">
<div class="h-3 bg-green-400 rounded-t-md"></div>

  <div>

    <div class="flex justify-evenly">
      <div class="px-6 py-6 pt-6 text-xl font-bold capitalize text-block dark:text-block">餐點註記：<%= @menu.note %></div>
      <div class="px-6 py-6 pt-6 text-xl font-bold capitalize text-block dark:text-block">單價：$<%= @menu.price %></div>
    </div>


    <div data-controller="update-quantity">
      
      <%= form_with url: add_cart_path(@menu, {serial_number: params[:serial_number]}), method: :post do |f| %>
      <div class="flex pb-3 justify-evenly">

        <div class="flex">
          <button data-action="click->update-quantity#decrement" class="px-2 bg-gray-300">-</button>
          <%= f.text_field :quantity, class:"bg-green-100 border-2 text-center ", value: 1, min: 1, max: 10, data: {update_quantity_target: "quantity"} %>
          <button data-action="click->update-quantity#increment" class="px-2 bg-gray-300">+</button>
        </div>
        
        <div>
          <button class="px-6 py-2 mx-2 text-white transition-colors duration-200 transform bg-pink-500 rounded-md hover:bg-pink-700 focus:outline-none focus:bg-gray-600 hover:scale-105">
          <%= f.submit "加入購物車", data: {action: "click->update-quantity#addOne",  update_quantity_target: "link"}%>
          </button>
        </div>
      </div>
    </div>
      <% end %>

  </div>


</section>
