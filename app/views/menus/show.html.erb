<header class="flex flex-shrink-0">
  <div class="flex items-center w-full p-3 bg-maingray md:px-6">
    <nav class="w-full  flex">
      <div class="flex items-center m-auto w-48 h-7">
        <img src="/photo/wechef-logo-nbg.png" class="mr-2" alt="WeChef Logo" style="aspect-ratio:auto">
      </div>
    </nav>
  </div>
</header>
<div class="h-full">
  <div class="text-center pt-2 md:pt-5">
    <h1 class="text-3xl font-bold text-maingray pb-2"><%= @menu.name %></h1>
  </div>
  <div class="flex flex-col items-center w-full md:flex-row">
    <div class="w-full h-full max-h-screen p-4 mx-auto bg-white rounded-md md:w-1/3 md:px-8">
      <div class="mb-12">
        <div class="bg-gray-300 rounded-md">
          <div class="block text-md text-center font-bold text-maingray px-2 py-1 texe-center" >
            餐點註記
          </div>
          <div class="pl-4 md:pl-0.5 px-4 w-full border-2 py-2 rounded-b-lg text-md outline-none border-gray-300 bg-white text-center">
            <%= @menu.note %>
          </div>
        </div>
        <div class="my-3 bg-gray-300 rounded-md">
          <div class="block text-md text-center font-bold text-maingray px-2 py-1">
            單價
          </div>
          <div class="px-4 w-full bg-white border-2 py-2 rounded-b-lg text-md outline-none border-gray-300 text-center">
            $<%= @menu.price %>
          </div>
        </div>
        <%= form_with url: add_cart_path(@menu, {serial_number: params[:serial_number]}), method: :post do |f| %>
        <div class="my-3 bg-gray-300 rounded-md">
          <div class="py-2 flex justify-center" data-controller="update-quantity">
            <button data-action="click->update-quantity#decrement" class="px-2 mx-2 bg-gray-100">-</button>
            <%= f.text_field :quantity, class:"bg-white-100 border-2 text-center ", value: 1, min: 1, max: 10, data: {update_quantity_target: "quantity"} %>
            <button data-action="click->update-quantity#increment" class="px-2 mx-2 bg-gray-100">+</button>
          </div>
        </div>
        <div>
          <%= f.submit "加入購物車",class:"mt-4 mb-3 w-full bg-mainorange text-white py-2 rounded-md transition duration-100 hover:bg-yellow-500 ", data: {action: "click->update-quantity#addOne",  update_quantity_target: "link"}%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>