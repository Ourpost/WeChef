<div class="flex flex-col items-center w-full md:flex-row">
  <div class="w-full h-full max-h-screen p-4 mx-auto bg-white rounded-md md:w-1/3 md:px-8">
    <%= form_with( model: [ store , menu ] ) do |f| %>
      <div class="mb-12">
        <div class="bg-gray-300 rounded-md">
          <%= f.label :name ,'菜名' ,class:"block text-md font-bold text-maingray px-2 py-1 texe-center" %>
          <%= f.text_field :name ,autofocus: true, autocomplete: "name", class:"pl-4 md:pl-1 px-4 w-full border-2 py-2 rounded-b-lg text-md outline-none border-gray-300 focus:border-mainorange text-center " ,placeholder:"請輸入菜名"%>
        </div>
        <div class="my-3 bg-gray-300 rounded-md">
          <%= f.label :price ,'單價' ,class:"block text-md font-bold text-maingray px-2 py-1"%>
          <%= f.number_field :price ,min: 1, class:"px-4 w-full border-2 py-2 rounded-b-lg text-md outline-none border-gray-300 focus:border-mainorange text-center" ,placeholder:"請輸入單價"%>
        </div>
        <div class="my-3 bg-gray-300 rounded-md pb-1">
          <%= f.label :classification_id, "分類" ,class:"block text-md font-bold text-maingray px-2 py-1"%>
          <div class="px-1">
            <%= f.select :classification_id, store.classifications.map{ |c| [c.name, c.id] }, {}, { class: 'text-center px-4 py-2 m-auto flex justify-center border-1 text-md w-full rounded-b-sm '} %>
          </div>
        </div>
        <div class="my-3 bg-gray-300 rounded-md">
          <%= f.label :avatar ,"商品圖片" ,class:"block text-md font-bold text-maingray px-2 py-1"%>
          <div class="flex justify-center text-center pb-2">
            <%= f.file_field :avatar , {class:" w-1/2"} %> 
          </div>
        </div>
        <div class="my-3 rounded-md">
          <%= f.label :note ,"備註(限字數150字)" , class:"block bg-gray-300 rounded-t-md text-md font-bold text-maingray px-2 py-1"%>
          <%= f.text_area :note ,autofocus: true, autocomplete: "name", class:"pl-4 md:pl-0.5 px-4 w-full border-2 rounded-b-lg text-md outline-none focus:border-mainorange text-center", placeholder:"請輸入備註" %>
        </div>
        <div class="flex justify-end mt-6">
          <%= f.submit '回菜單' , class:"mt-4 mb-3 w-full bg-gray-300 text-maingray mr-2 py-2 rounded-md transition duration-100 hover:bg-gray-200 text-center "%>
          <%= f.submit '新增菜單' , class:"mt-4 mb-3 w-full bg-mainorange text-white py-2 rounded-md transition duration-100 hover:bg-yellow-500 text-center"%>
        </div>
      </div>
    <% end %>
  </div>
</div>